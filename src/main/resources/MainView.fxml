<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="root-pane" stylesheets="@css/styles.css" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.mycompany.aforotraficoapp.Controller">

    <children>
        <!--Menu arriba-->       
        <MenuBar layoutX="0" layoutY="0" prefWidth="600">
            <Menu text="Ayuda">
                <MenuItem fx:id="menuVerVideo" text="Ver vídeo introductorio" />
            </Menu>
        </MenuBar>

        <!-- Fila 1 -->
        <Button fx:id="btnSeleccionar" layoutX="108.0" layoutY="46.0" onAction="#seleccionarVideo" text="Seleccionar video" />
        <TextField fx:id="txtRutaVideo" layoutX="229.0" layoutY="46.0" prefHeight="25.0" prefWidth="264.0" promptText="Ruta del video" />

        <!-- Fila 2 -->
        <Label layoutX="156.0" layoutY="123.0" text="Tipo de Carretera" />        
        <ComboBox fx:id="comboTipo" layoutX="255.0" layoutY="119.0" prefWidth="200" />
        
        <!-- Fila 3 -->
        <Label fx:id="labelDistancia" layoutX="279.0" layoutY="192.0" text="Distancia líneas discontinuas" />
        <TextField fx:id="txtDistanciaLineas" layoutX="437.0" layoutY="188.0" prefHeight="25.0" prefWidth="57.0" promptText="metros" />
        <Label fx:id="labelAncho" layoutX="126.0" layoutY="192.0" text="Ancho Carril" />
        <TextField fx:id="txtAnchoCarril" layoutX="196.0" layoutY="188.0" prefHeight="25.0" prefWidth="57.0" promptText="metros" />
        <!-- Botón procesar -->
        <Button fx:id="btnProcesar" layoutX="187.0" layoutY="308.0" onAction="#procesarVideo" prefHeight="25.0" prefWidth="92.0" styleClass="btn-procesar" text="Procesar" />

        <!-- Progreso -->
        <StackPane fx:id="panelProgreso" layoutX="205.0" layoutY="218.0" prefHeight="25" prefWidth="200" visible="false">
            <ProgressBar fx:id="progreso" layoutX="262.0" layoutY="217.0" prefHeight="25" prefWidth="200" />
            <Label fx:id="lblPorcentaje" layoutX="344.0" layoutY="221.0" styleClass="label-progreso" text="0%" />
        </StackPane>
        <Button fx:id="btnResultados" layoutX="305.0" layoutY="308.0" mnemonicParsing="false" onAction="#abrirVentanaResultados" styleClass="btn-resultados" text="Ver Resultados" />
    </children>
</AnchorPane>
